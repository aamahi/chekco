@model eStore.Application.Features.Catalog.CatalogItemViewModel
    <div class="col-lg-3 col-md-6">
        <form id="submitToCart" asp-page="/Cart/Index" method="post">



            <div class="single-product">
                <div class="product-img">
                    <img class="img-fluid w-100" src="@Model.PictureUri" alt="" />
                    <div class="p_icon">
                        <a href="#">
                            <i class="ti-eye"></i>
                        </a>
                        <a href="#">
                            <i class="ti-heart"></i>
                        </a>
                        <a onclick="document.getElementById('submitToCart').submit(); return false;">
                            <i class="ti-heart"></i>
                        </a>

                    </div>
                </div>
                <div class="product-btm">
                    <a href="/Catalog?id=@Model.Id" class="d-block">
                        <h4>@Model.Name</h4>
                    </a>
                    <div class="mt-3">
                        <span class="mr-4">$@Model.Price</span>
                        <del>$@(Model.Price + 10)</del>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="@Model.Id" name="id" />
            <input type="hidden" asp-for="@Model.Name" name="name" />
            <input type="hidden" asp-for="@Model.PictureUri" name="pictureUri" />
            <input type="hidden" asp-for="@Model.Price" name="price" />
        </form>
    </div>
